<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.savi.auth">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name=".utils.AuthApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".modules.account.activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.account.activity.SignupActivity"
            android:label="@string/title_activity_signup" />
        <!--
            <activity
            android:name=".activity.ToDoListActivity"
            android:label="@string/title_activity_to_do_list"/>
        -->
        <activity android:name=".modules.dashboard.activity.HomeActivity" />

        <service android:name=".service.NotificationHandlerService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.InstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>


        <activity android:name=".modules.dashboard.activity.DashboardActivity" />
        <activity android:name=".modules.profile.ProfileActivity" />
        <activity android:name=".modules.poll.activity.PollActivity"/>
    </application>

</manifest>