<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    cardPreventCornerOverlap="false"
    cardUseCompatPadding="false"
    android:layout_height="200dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageview_profile_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@+id/imageview_profile_image"
            android:ellipsize="end"
            android:ems="2"
            android:maxLines="2"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textview_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_name"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@+id/imageview_profile_image"
            android:ellipsize="end"
            android:ems="2"
            android:maxLines="2"
            android:textSize="16sp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/ll_request_response"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/button_action"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_light" />

        <LinearLayout
            android:id="@+id/ll_request_response"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/button_accept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/white"
                android:text="@string/lbl_accept"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_dark" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/button_reject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/white"
                android:text="@string/reject"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_dark" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>