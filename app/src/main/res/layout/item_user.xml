<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:background="@color/cardview_light_background"
    android:layout_height="200dp"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageview_profilepic"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/textview_display_name"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/textview_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:padding="5dp"
        tools:text="Name" />


    <ImageView
        android:id="@+id/imageview_friendship_status"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/imageview_message"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"
        android:src="@android:drawable/alert_dark_frame"
        android:visibility="gone"
        tools:text="Savi Healer" />


    <ImageView
        android:id="@+id/imageview_message"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textview_display_name"
        android:layout_marginStart="5dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_instant_message"
        android:visibility="gone" />


    <TextView
        android:id="@+id/textview_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_display_name"
        android:layout_margin="5dp"
        android:layout_toStartOf="@id/imageview_message"
        android:textColor="@android:color/darker_gray"
        tools:text="Life is a suffering" />
</RelativeLayout>
</android.support.v7.widget.CardView>