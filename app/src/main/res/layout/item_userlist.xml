<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_profilepic"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:contentDescription="@null" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="#20757575"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_friendship_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@null"
            android:src="@android:drawable/alert_dark_frame"
            tools:text="Savi Healer"
            android:layout_above="@+id/imageview_message"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/textview_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@id/imageview_friendship_status"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Savi Healer" />


        <ImageView
            android:id="@+id/imageview_message"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textview_display_name"
            android:layout_marginStart="5dp"
            android:contentDescription="@null"
            android:src="@android:drawable/alert_dark_frame" />


        <TextView
            android:id="@+id/textview_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_display_name"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/imageview_message"
            android:textColor="@android:color/darker_gray"
            tools:text="Life is a suffering" />



    </RelativeLayout>
</LinearLayout>