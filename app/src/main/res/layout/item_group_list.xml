<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <View
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/linearlayout_options"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_blue_border"
            android:text="Join"
            android:layout_margin="2dp"
            android:textColor="@color/primary" />


        <Button
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_blue_border"
            android:text="Edit"
            android:layout_margin="2dp"
            android:textColor="@color/primary" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_blue_border"
            android:text="Delete"
            android:textColor="@color/primary" />

    </LinearLayout>
    <View
        android:layout_below="@+id/linearlayout_options"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v7.widget.CardView
        android:visibility="visible"
        android:id="@+id/cardview_group_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imageview_group_image"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/avatarf1"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imageview_group_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="3 Idiots" />

                <TextView
                    android:id="@+id/textview_total_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Members : 5/10" />


                <TextView
                    android:id="@+id/textview_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/green"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5dp"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Closed" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>